{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "outDir": "./out",
      "paths": {
        "*": ["types/*"]
      },
      "lib": ["ESNext", "dom"]
    },
    "include": [
      "playwright.config.ts",
      "e2e/**/*.ts"
    ]
  }
  