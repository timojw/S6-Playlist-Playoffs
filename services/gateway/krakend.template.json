{
  "version": 3,
  "name": "Playlist Playoffs API Gateway",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/api/game/add",
      "method": "POST",
      "backend": [
        {
          "host": ["http://game-service:8081"],
          "url_pattern": "/game",
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/api/game/:id",
      "method": "GET",
      "backend": [
        {
          "host": ["http://game-service:8081"],
          "url_pattern": "/game/{id}",
          "method": "GET",
          "extra_config": {
            "github.com/devopsfaith/krakend/proxy": {
              "querystring_params": ["id"]
            }
          }
        }
      ]
    },
    {
      "endpoint": "/api/votes",
      "method": "POST",
      "backend": [
        {
          "host": ["http://voting-service:8082"],
          "url_pattern": "/votes",
          "method": "POST"
        }
      ]
    },
    {
      "endpoint": "/api/votes/:game_id",
      "method": "GET",
      "backend": [
        {
          "host": ["http://voting-service:8082"],
          "url_pattern": "/votes/{game_id}",
          "method": "GET",
          "extra_config": {
            "github.com/devopsfaith/krakend/proxy": {
              "querystring_params": ["game_id"]
            }
          }
        }
      ]
    }
  ],
  "extra_config": {
    "telemetry/metrics": {
      "collection_time": "30s",
      "listen_address": ":8090"
    },
    "qos/ratelimit/router": {
      "max_rate": 50,
      "capacity": 50,
      "client_max_rate": 5,
      "client_capacity": 5,
      "every": "10m",
      "strategy": "ip"
    },
    "security/bot-detector": {
      "cache_size": 10000,
      "empty_user_agent_is_bot": true
    },
    "telemetry/influx": {
      "address": "tcp://10.0.118.2:8086",
      "ttl": "25s",
      "buffer_size": 100,
      "username": "",
      "password": ""
    },
    "security/cors": {
      "allow_origins": ["http://localhost:4200", "http://localhost:3000", "http://4.182.90.170.nip.io", "https://4.182.90.170.nip.io"],
      "allow_methods": ["POST", "GET", "OPTIONS"],
      "allow_headers": ["Origin", "Authorization", "Content-Type", "Accept"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h",
      "allow_credentials": true
    },
    "auth/validator": {
      "shared_cache_duration": 3600
    }
  }
}
